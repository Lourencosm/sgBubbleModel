FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/initialConditions"

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform $pressure_internal;

boundaryField
{
    fixedU
    {
        type            fixedFluxPressure;
        value           uniform 0;        
    }

    outlet
    {
        type            zeroGradient;
    }

    atmosphere
    {

        type            totalPressure;
        p0              $internalField;
        value           uniform 0;
    }
    
    #include "include/frontBackPatches"     
}

