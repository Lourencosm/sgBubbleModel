FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include        "include/initialConditions"

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform $nutInitial_internal;

boundaryField
{
    "(inlet|outlet|atmosphere)"
    {
        type            calculated;
        value           $internalField;
    }

    bottom
    {
        type                nutkRoughWallFunction;
        Ks                  uniform $wallRoughnessHeight;
        Cs                  uniform 0.5;
        value               $internalField;        
    }

    #include "include/frontBackPatches"   
}


